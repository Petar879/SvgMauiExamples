<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SvgMauiExamples.AppShell"
    Shell.FlyoutBehavior="Disabled"
    xmlns:local ="clr-namespace:SvgMauiExamples"
    >
    <TabBar>
        <Tab Title=".svg to .png">
            <ShellContent ContentTemplate="{DataTemplate local:SvgToPng}" />
        </Tab>
        <Tab Title="Blazor example">
            <ShellContent ContentTemplate="{DataTemplate local:BlazorExample}" />
        </Tab>
        <Tab Title="FFImageLoading example">
            <ShellContent ContentTemplate="{DataTemplate local:FFImageLoading}" />
        </Tab>
    </TabBar>
</Shell>

